<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define log directory and file name -->
    <property name="LOG_DIR" value="${log.path:-${user.dir}}" />
    <property name="LOG_FILE" value="${LOG_DIR}/log.log" />
    <property name="LOG_TYPE" value="${LOG_TYPE:-DEBUG}" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS z} [%thread] %-5level %logger{36} %M:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Roll over to a new file when size exceeds 100MB -->
            <fileNamePattern>${LOG_DIR}/log.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <!-- Keep up to 5 log files -->
            <maxHistory>5</maxHistory>
            <!-- Optional: Limit total size of all log files (e.g., 500MB for 5 files) -->
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS z} [%thread] %-5level %logger{36} %M:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="${LOG_TYPE}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>